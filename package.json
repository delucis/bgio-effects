{
  "name": "bgio-effects",
  "version": "0.4.4",
  "description": "ðŸ“¤ Helpers for managing state effects in boardgame.io",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "plugin/**/*",
    "react/**/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "prerelease": "npm t && npm run build",
    "release": "standard-version -s",
    "lint": "eslint src",
    "prettier": "prettier --write --single-quote src",
    "pretest": "npm run lint",
    "test": "jest --coverage --collectCoverageFrom=src/**/*",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier",
      "pre-push": "npm t"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unused-vars": ["warn", {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": false,
        "argsIgnorePattern": "_.+"
      }]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/delucis/bgio-effects.git"
  },
  "keywords": [
    "side-effect",
    "actor-model",
    "event",
    "emitter",
    "react",
    "boardgame-io",
    "plugin"
  ],
  "author": "Chris Swithinbank <swithinbank@gmail.com> (http://chrisswithinbank.net/)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/delucis/bgio-effects/issues"
  },
  "homepage": "https://github.com/delucis/bgio-effects#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.1",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.5",
    "@types/react": "^16.9.34",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "boardgame.io": "^0.39.16",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.1.3",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "mitt": "^2.1.0",
    "nanoid": "^3.1.3",
    "react-use": "^15.3.2",
    "ts-toolbelt": "^8.0.6"
  },
  "peerDependencies": {
    "boardgame.io": "^0.39.16",
    "react": "^16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
